<h3>Login to the bookstore<h3>

  <div class="card">
    <div class="card-block">
      <%= form_for do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <%= submit_tag "Login", :class => "btn btn-primary" %>
      <%end%>
    </div>
  </div>
